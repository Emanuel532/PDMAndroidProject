<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajutor"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Explicarea funcționalităților de bază -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Funcționalități de bază:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Vizualizarea formulelor într-un grafic interactiv."
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Afișarea graficului generat în urma calculului."
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Calculul unei necunoscute dintr-o formulă specifică."
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Autentificarea utilizatorilor pentru salvarea datelor personale."
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Listarea explicațiilor pentru formulele disponibile."
            android:layout_marginBottom="16dp"/>

        <!-- Descrierea salvării datelor în SQLite -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvarea datelor:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pentru salvarea datelor specifice fiecărui utilizator, se utilizează SQLite."
            android:layout_marginBottom="16dp"/>

        <!-- Descrierea animațiilor pentru desenarea graficelor -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Animații pentru grafice:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desenarea graficelor este animată pentru a oferi o experiență interactivă și plăcută."
            android:layout_marginBottom="16dp"/>

        <!-- Loc pentru imagini explicative -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_image_view"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_image_view"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>